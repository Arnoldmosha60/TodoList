<%- include("header") -%>

<div class="box" id="heading">
    <h1><%= listTitle %></h1>
</div>

<div class="box">
    <% newItem.forEach((itemName) => { %>
        <form action="/delete" method="POST">
            <div class="item">
                <input type="checkbox" onchange="this.form.submit()" value="<%= itemName._id %>" name="checkbox">
                <p><%= itemName.name %></p>
            </div> 
            <input type="hidden" name="listName" value="<%= listTitle %>"></input>
        </form>
    <% }); %>

    <form class="item" action="/" method="post">
        <input type="text" placeholder="New Item" name="newItem" autocomplete="off">
        <button type="submit" name="list" value="<%= listTitle %>">+</button>
    </form>
</div>

<%- include("footer") -%>

